<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">



    <View
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#22aaaaaa" />

    <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:grid="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_test_activityy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa">

        <com.example.sadeep.winternightd.buttons.customizedbuttons.AttachBoxButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:tag="0#00bfa5"
            grid:layout_columnWeight="1"
            android:paddingTop="7dp"
            android:visibility="gone"
            android:src="@drawable/ic_checkbox_marked_white_36dp" />

        <com.example.sadeep.winternightd.buttons.customizedbuttons.AttachBoxButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:tag="0#88eeee"
            grid:layout_columnWeight="1"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:src="@drawable/xx" />
        <com.example.sadeep.winternightd.buttons.customizedbuttons.AttachBoxButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:tag="1#3d5afe"
            grid:layout_columnWeight="1"
            android:paddingTop="7dp"
            android:src="@drawable/ic_format_list_bulleted_white_36dp" />

        <com.example.sadeep.winternightd.buttons.customizedbuttons.AttachBoxButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:tag="2#ff7043"
            grid:layout_columnWeight="1"
            android:paddingTop="7dp"
            android:src="@drawable/ic_format_list_numbers_white_36dp" />

        <com.example.sadeep.winternightd.buttons.customizedbuttons.AttachBoxButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:tag="3#8d6e63"
            grid:layout_columnWeight="1"
            android:paddingTop="7dp"
            android:src="@drawable/ic_camera_white_48dp" />

        </android.support.v7.widget.GridLayout>

</LinearLayout>
